<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#404040">

        <Button

            android:id="@+id/sync"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:background="@drawable/btn_bg"
            android:text="SYNC"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sync"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_toLeftOf="@+id/home_menu_btn"
            android:layout_toStartOf="@+id/home_menu_btn"
            android:text="Wai Yan Aung"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/home_menu_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/sync"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="61dp"
            android:layout_marginRight="61dp"
            android:background="@drawable/user" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/relative_layout"
        android:layout_marginEnd="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginStart="61dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_above="@+id/txtview"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/take_away_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/homeone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Take Away"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/table_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/hometwo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Table"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/room_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/homethree" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Room"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/invoice_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/homefour" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Invoice"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/message_btn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/homefive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Message"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txtview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="Copyright Blah Blah Blah Copyright Blah Blah Blah "
        android:textColor="@color/secondColor"
        android:gravity="center"
        android:background="#363535"/>


</RelativeLayout>






