<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp">

            <TextView
                android:id="@+id/vouncher_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Vouncher No : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vouncher_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/vouncher_view"
                android:text="ADMIN16081900001"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/table_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/vouncher_txt"
                android:paddingLeft="40dp"
                android:text="Table No : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/table_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/table_view"
                android:text="A007"
                android:textStyle="bold" />

            <Button
                android:id="@+id/take_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@drawable/flat_selector"
                android:text="Take"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout"
            android:background="@drawable/auotcomplete_normal"
            android:orientation="horizontal"
            android:padding="13dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:text="Product Name"
                android:gravity="center"/>

            <!--<TextView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:text="DurationTime"-->
                <!--android:gravity="center"/>-->

            <TextView
                android:id="@+id/Stat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Order Type"
                android:gravity="center"/>

            <TextView
                android:id="@+id/Status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Status"
                android:gravity="center"/>

        </LinearLayout>

            <ListView
                android:id="@+id/complete_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title_layout"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>