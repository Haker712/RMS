<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new">


    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#404040"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />


    </LinearLayout>


    <TextView
        android:id="@+id/logintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="LOG IN"
        android:textColor="@color/secondColor"
        android:textSize="50dp" />

    <View
        android:id="@+id/view"
        android:layout_width="800dp"
        android:layout_height="2dp"
        android:layout_below="@+id/logintxt"
        android:layout_centerHorizontal="true"
        android:background="@color/secondColor" />

    <RelativeLayout
        android:id="@+id/activate_relative_layout"
        android:layout_width="@dimen/userlogin_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#66e38b20"
        android:padding="30dp">

        <EditText
            android:id="@+id/activate_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editor_selector"
            android:hint="@string/activate"
            android:inputType="text"
            android:padding="7dp" />

        <View
            android:id="@+id/view_btn1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_below="@+id/activate_edit" />

        <Button
            android:id="@+id/submmit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_btn1"
            android:background="@drawable/flat_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/submmit"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Login_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/relative_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="150dp">

            <TextView
                android:id="@+id/txtun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER NAME"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/user_name_edit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:inputType="textPassword"
               />


        </LinearLayout>


        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1">

            <TableRow android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="2"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="3"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="4"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="5"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="6"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="7"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="8"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="9"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/login_delete"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/login_delete"
                    android:textSize="30sp" />

            </TableRow>


        </TableLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/user_login_txt"
        android:layout_width="@dimen/userlogin_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#e38b20"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/user_login"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#363535"
        android:gravity="center"
        android:text="Copyright Blah Blah Blah Copyright Blah Blah Blah "
        android:textColor="@color/secondColor" />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:text="Versiosdfsfsdfsfsdfsn"
        android:textColor="#EEEE"
        android:textSize="20dp" />


</RelativeLayout>
