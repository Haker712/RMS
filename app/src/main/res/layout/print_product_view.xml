<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:weightSum="6.5">
    <TextView
        android:id="@+id/print_item_name_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:text="Item Name"
        android:layout_gravity="center"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/print_qty_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Quantity"
        android:layout_gravity="center"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/print_price_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Pirce"
        android:layout_gravity="center"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/print_discount_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Discount"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/print_extra_price_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="ExtraPrice"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/print_amount_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Amount"
        android:textColor="@color/blackColor" />

</LinearLayout>