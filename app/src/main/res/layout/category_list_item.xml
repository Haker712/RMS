<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:gravity="center"
    android:padding="3dp">

    <TextView
        android:id="@+id/item_name_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/blackColor" />

    <Button
        android:id="@+id/quantity_btn"
        android:layout_toRightOf="@+id/item_name_txt"
        android:layout_width="60dp"
        android:layout_height="@dimen/icon_size"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="0"
        android:background="@drawable/btn_selector"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_toRightOf="@+id/quantity_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="Price"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/discount_txt"
        android:layout_toRightOf="@+id/price_txt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="Discount"
        android:textColor="@color/blackColor" />

    <Button
        android:id="@+id/extra_btn"
        android:layout_toRightOf="@+id/discount_txt"
        android:layout_width="60dp"
        android:layout_height="@dimen/icon_size"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="AddOn"
        android:background="@drawable/btn_selector"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/extra_price_txt"
        android:layout_toRightOf="@+id/extra_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="Extra Price"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/amount_txt"
        android:layout_toRightOf="@+id/extra_price_txt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="Amount"
        android:textColor="@color/blackColor" />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_toRightOf="@+id/amount_txt"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true">
        <CheckBox
            android:id="@+id/take_away_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/MyCheckBox"/>
        <ImageView
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_clear_black_24dp"/>
    </LinearLayout>
</RelativeLayout>
